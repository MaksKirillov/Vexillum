<AnchorPane prefHeight="559.0" prefWidth="806.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vex.vexillum.control.StatsController">
    <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #8D69A1;" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <ImageView fitHeight="80.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../images/buttons/StatsImage.png"/>
        </ImageView>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="766.0" spacing="20.0"
              style="-fx-background-color: #D0BFD8;">
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0">
                <HBox.margin>
                    <Insets bottom="10.0" top="70.0"/>
                </HBox.margin>
                <ImageView fitHeight="34.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/FlagsImage.png"/>
                </ImageView>

                <ImageView fitHeight="34.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/FactsImage.png"/>
                </ImageView>
                <ImageView fitHeight="34.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/MapsImage.png"/>
                </ImageView>
                <ImageView fitHeight="34.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/AllImage.png"/>
                </ImageView>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0">
                <HBox.margin>
                    <Insets bottom="10.0" top="10.0"/>
                </HBox.margin>
                <ImageView fitHeight="34.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/RightImages.png"/>
                </ImageView>
                <Text fx:id="RightFlags" strokeType="OUTSIDE" strokeWidth="0.0">
                    <font>
                        <Font name="Berlin Sans FB" size="30.0"/>
                    </font>
                </Text>
                <Text fx:id="RightFacts" strokeType="OUTSIDE" strokeWidth="0.0">
                    <font>
                        <Font name="Berlin Sans FB" size="30.0"/>
                    </font>
                </Text>
                <Text fx:id="RightMaps" strokeType="OUTSIDE" strokeWidth="0.0">
                    <font>
                        <Font name="Berlin Sans FB" size="30.0"/>
                    </font>
                </Text>
                <Text fx:id="AllRight" strokeType="OUTSIDE" strokeWidth="0.0">
                    <font>
                        <Font name="Berlin Sans FB" size="30.0"/>
                    </font>
                </Text>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0">
                <HBox.margin>
                    <Insets bottom="10.0" top="10.0"/>
                </HBox.margin>
                <ImageView fitHeight="34.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/WrongImage.png"/>
                </ImageView>
                <Text fx:id="WrongFlags" strokeType="OUTSIDE" strokeWidth="0.0">
                    <font>
                        <Font name="Berlin Sans FB" size="30.0"/>
                    </font>
                </Text>
                <Text fx:id="WrongFacts" strokeType="OUTSIDE" strokeWidth="0.0">
                    <font>
                        <Font name="Berlin Sans FB" size="30.0"/>
                    </font>
                </Text>
                <Text fx:id="WrongMaps" strokeType="OUTSIDE" strokeWidth="0.0">
                    <font>
                        <Font name="Berlin Sans FB" size="30.0"/>
                    </font>
                </Text>
                <Text fx:id="AllWrong" strokeType="OUTSIDE" strokeWidth="0.0">
                    <font>
                        <Font name="Berlin Sans FB" size="30.0"/>
                    </font>
                </Text>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0">
                <HBox.margin>
                    <Insets bottom="10.0" top="10.0"/>
                </HBox.margin>
                <ImageView fitHeight="36.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/AllAllImage.png"/>
                </ImageView>
                <Text fx:id="AllFlags" strokeType="OUTSIDE" strokeWidth="0.0">
                    <font>
                        <Font name="Berlin Sans FB" size="30.0"/>
                    </font>
                </Text>
                <Text fx:id="AllFacts" strokeType="OUTSIDE" strokeWidth="0.0">
                    <font>
                        <Font name="Berlin Sans FB" size="30.0"/>
                    </font>
                </Text>
                <Text fx:id="AllMaps" strokeType="OUTSIDE" strokeWidth="0.0">
                    <font>
                        <Font name="Berlin Sans FB" size="30.0"/>
                    </font>
                </Text>
                <Text fx:id="AllAll" strokeType="OUTSIDE" strokeWidth="0.0">
                    <font>
                        <Font name="Berlin Sans FB" size="30.0"/>
                    </font>
                </Text>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="18.0">
                <HBox.margin>
                    <Insets bottom="10.0" top="65.0"/>
                </HBox.margin>

                <Button fx:id="flagResetButton" alignment="CENTER" mnemonicParsing="false"
                        onAction="#handleResetFlagsButtonAction" prefHeight="34.0" prefWidth="100.0"
                        style="-fx-background-color: #B8B3C8;">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../images/buttons/ResetImage.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="factsResetButton" alignment="CENTER" mnemonicParsing="false"
                        onAction="#handleResetFactsButtonAction" prefHeight="34.0" prefWidth="100.0"
                        style="-fx-background-color: #B8B3C8;">

                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../images/buttons/ResetImage.png"/>
                        </ImageView>
                    </graphic>

                </Button>

                <Button fx:id="mapsResetButton" alignment="CENTER" mnemonicParsing="false"
                        onAction="#handleResetMapsButtonAction" prefHeight="34.0" prefWidth="100.0"
                        style="-fx-background-color: #B8B3C8;">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../images/buttons/ResetImage.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="allResetButton" alignment="CENTER" mnemonicParsing="false"
                        onAction="#handleResetAllButtonAction" prefHeight="34.0" prefWidth="100.0"
                        style="-fx-background-color: #B8B3C8;">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../images/buttons/ResetImage.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </HBox>
        <Button fx:id="changeUserButton" minHeight="50.0" minWidth="400.0" mnemonicParsing="false"
                onAction="#handleChangeUserButtonAction" prefHeight="60.0" prefWidth="570.0"
                style="-fx-background-color: #B8B3C8;" textAlignment="CENTER">
            <graphic>
                <ImageView fitHeight="40.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/ChangeUserImage.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="addUserButton" minHeight="50.0" minWidth="400.0" mnemonicParsing="false"
                onAction="#handleAddUserButtonAction" prefHeight="60.0" prefWidth="570.0"
                style="-fx-background-color: #B8B3C8;" textAlignment="CENTER">
            <graphic>
                <ImageView fitHeight="40.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/AddUserImage.png"/>
                </ImageView>
            </graphic>
        </Button>

    </VBox>

    <Button fx:id="backButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleBackButtonAction"
            prefHeight="34.0" prefWidth="100.0" style="-fx-background-color: #B8B3C8;">
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="73.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/buttons/BackImage.png"/>
            </ImageView>
        </graphic>
    </Button>

</AnchorPane>
