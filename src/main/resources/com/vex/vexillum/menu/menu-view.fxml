<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vex.vexillum.menu.MenuController">
    <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #8D69A1;" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <ImageView pickOnBounds="true" preserveRatio="true">
            <Image url="@../images/titles/titleImage.png"/>
        </ImageView>

        <Button fx:id="flagsButton" minHeight="50.0" minWidth="400.0" mnemonicParsing="false"
                onAction="#handleFlagsButtonAction" prefHeight="60.0" prefWidth="400.0"
                style="-fx-background-color: #B8B3C8;" textAlignment="CENTER">
            <graphic>
                <ImageView fitHeight="55.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/FlagsImage.png"/>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="factsButton" minHeight="50.0" minWidth="400.0" mnemonicParsing="false"
                onAction="#handleFactsButtonAction" prefHeight="60.0" prefWidth="400.0"
                style="-fx-background-color: #B8B3C8;" textAlignment="CENTER">
            <graphic>
                <ImageView fitHeight="55.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/FactsImage.png"/>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="mapsButton" minHeight="50.0" minWidth="400.0" mnemonicParsing="false"
                onAction="#handleMapsButtonAction" prefHeight="60.0" prefWidth="400.0"
                style="-fx-background-color: #B8B3C8;" textAlignment="CENTER">
            <graphic>
                <ImageView fitHeight="60.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/MapsImage.png"/>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="statsButton" minHeight="50.0" minWidth="400.0" mnemonicParsing="false"
                onAction="#handleStatsButtonAction" prefHeight="60.0" prefWidth="400.0"
                style="-fx-background-color: #B8B3C8;" textAlignment="CENTER">
            <graphic>
                <ImageView fitHeight="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/StatsImage.png"/>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="exitButton" minHeight="50.0" minWidth="400.0" mnemonicParsing="false"
                onAction="#handleExitButtonAction" prefHeight="60.0" prefWidth="400.0"
                style="-fx-background-color: #B8B3C8;" textAlignment="CENTER">
            <graphic>
                <ImageView fitHeight="55.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/ExitImage.png"/>
                </ImageView>
            </graphic>
        </Button>

    </VBox>
    <Button fx:id="backButton" alignment="CENTER" layoutX="20.0" layoutY="20.0" mnemonicParsing="false"
            onAction="#handleBackButtonAction" prefHeight="34.0" prefWidth="100.0"
            style="-fx-background-color: #B8B3C8;" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="73.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/buttons/BackImage.png"/>
            </ImageView>
        </graphic>
    </Button>
</AnchorPane>
