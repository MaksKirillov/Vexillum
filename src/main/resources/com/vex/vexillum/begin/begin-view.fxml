<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vex.vexillum.begin.BeginController">
    <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #8D69A1;" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <ImageView pickOnBounds="true" preserveRatio="true">
            <Image url="@../images/titles/titleImage.png"/>
        </ImageView>
        <Button fx:id="newGameButton" minHeight="50.0" minWidth="400.0" mnemonicParsing="false"
                onAction="#handleNewGameButtonAction" prefHeight="60.0" prefWidth="400.0"
                style="-fx-background-color: #B8B3C8;" textAlignment="CENTER">
            <graphic>
                <ImageView fitHeight="55.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/NewGameImage.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="loadGameButton" minHeight="50.0" minWidth="400.0" mnemonicParsing="false"
                onAction="#handleLoadGameButtonAction" prefHeight="60.0" prefWidth="400.0"
                style="-fx-background-color: #B8B3C8;" textAlignment="CENTER">
            <graphic>
                <ImageView fitHeight="55.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/LoadGameImage.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="exitButton" minHeight="50.0" minWidth="400.0" mnemonicParsing="false"
                onAction="#handleExitButtonAction" prefHeight="60.0" prefWidth="400.0"
                style="-fx-background-color: #B8B3C8;" textAlignment="CENTER">
            <graphic>
                <ImageView fitHeight="55.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/buttons/ExitImage.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Label fx:id="label" style="-fx-background-color: #B8B3C8;">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>

    </VBox>

</AnchorPane>
